<template name="homeProduct" class="home-product">
  <view class="product-item" data-id="{{id}}" bindtap="detailClick">

    <!-- 图片 -->
    <view class="product-image">
      <image src="{{thumbnail}}"></image>
    </view>
    
    <view class="product-info">
      <view class="product-description">
        {{name}}
      </view>
      <view class="product-price">
        <text class="price1">
          ¥{{price}}
        </text>
        <text class="price2">
          拼团价: ¥{{gb_price}}
        </text>
      </view>
    </view>
  </view>
</template>